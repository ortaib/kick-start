<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>Edit <%=project.name %></h1>
                <form action="/projects/<%= project._id %>?_method=PUT" method="POST" id="myform">
                    <div class="form-group">
                        <h6>Project's name</h6>
                        <input class="form-control" type="text" name="project[name]" placeholder="name" value="<%= project.name %>" required>
                    </div>
                    <div class="form-group">
                        <h6>Project Video</h6>
                        <input class="form-control" type="text" name="project[video]" id="videoSrc"
                        placeholder="https://youtube.com/..." value="<%=project.video%>" required>
                    </div>
                    <div class="form-group">
                        <h6>Pledge </h6>
                      <input class="form-control" type="number" onkeydown="return event.keyCode !== 69" name="project[pledge]" placeholder="pledge" min="100" step="50"
                      value="<%= project.pledge %>" required>
                    </div>
                    <div class="form-group">
                        <h6>Description</h6>
                        <textarea class="form-control" rows="5" name="project[description]"required><%=project.description%></textarea>
                    </div>
                    <div class="form-group">
                        <h6>About</h6>
                        <textarea class="form-control resize" rows="10" name="project[about]" required><%=project.about %></textarea>
                    </div>
                    <div class="form-group">
                        <h6>Try Now link</h6>
                        <input class="form-control" type="text" name="project[tryNow]" placeholder="http://.." required>
                    </div>
                    <div class="form-group">
                        <h6>Img URL</h6>
                        <input class="form-control" type="text" value="<%= project.images[0] %>" name="fImage" id="image" 
                        title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                        <input class="form-control" type="text" value="<%= project.images[1] %>" name="sImage" id="image" 
                        title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                        <input class="form-control" type="text" value="<%= project.images[2] %>" name="tImage" id="image" 
                        title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                        <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-large btn-primary btn-block" type="submit" >Submit</button>
                    </div>
            </form>
            <button class="btn btn-large btn-warning btn-block" id="try">Try</button>

                <a href="/projects/<%=project._id%>">go back</a>
        </div>
        <div class="col-md-8">
            <div class="thumbnail">
                <div>
                    <iframe id="video" height="500px" src="https://www.youtube.com/embed/<%=project.video%>"></iframe>                    </div>
                </div>
                <div class="caption-full">
                     <h3><%= project.name %></h3>
                     <p><em>Created by <%= project.author.username %></em></p>
                     <p id="description"> <%= project.description %> </p>
                    <div>
                    <span id="about-span">About</span>
                    <div id="about"><%=project.about%></div>
                    <div>
                        <img class="img-inside-thumb-large" src="<%= project.images[0] %>">

                    <div>
                        <img class="img-inside-thumb-large" src="<%= project.images[1] %>">
                    </div>
                    <div>
                        <img class="img-inside-thumb-large" src="<%= project.images[2] %>">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    editProject();
</script>
<% include ../partials/footer %>

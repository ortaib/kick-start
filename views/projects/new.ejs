<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>Create New Project</h1>
            <form id="myform" action="/projects" method="POST">
                <div class="form-group">
                    <h6>Enter Project's name</h6>
                    <input class="form-control" type="text" name="project[name]" placeholder="name" required>
                </div>
                <div class="form-group">
                    <h6>Project Video</h6>
                    <input class="form-control" type="text" name="project[video]" id="videoSrc"
                    placeholder="https://www.youtube.com/watch?v=" required>
                </div>
                <div class="form-group">
                    <h6>Enter pledge in $</h6>
                  <input class="form-control" type="number" onkeydown="return event.keyCode !== 69" name="project[pledge]" placeholder="pledge" min="100" step="50" required>
                </div>
                <div class="form-group">
                    <h6>Recruitment time</h6>
                    <input class="form-control half-width-form-control-left" 
                    onkeydown="return event.keyCode !== 69" type="number" name="days" placeholder="days" min="0" max="100" title="days" required>
                    <input class="form-control half-width-form-control-right" 
                    onkeydown="return event.keyCode !== 69" type="number" name="hours" placeholder="hours" min="0" max="24" title="hours" required>
                </div>
                <div class="form-group">
                    <h6>Description</h6>
                    <textarea class="form-control" rows="5" name="project[description]" required></textarea>
                </div>
                <div class="form-group">
                    <h6>About</h6>
                    <textarea class="form-control resize" rows="10" name="project[about]" required></textarea>
                </div>
                <div class="form-group">
                    <h6>Try Now link</h6>
                    <input class="form-control" type="text" name="project[tryNow]" placeholder="http://.." required>
                </div>
                
                <div class="form-group">
                    <h6>Project display Image</h6>
                    <input class="form-control" type="text" name="fImage" id="image" 
                    title="Only images from images.unsplash.com allowed. See link below for instructions." 
                    placeholder="https://images.unsplash.com/..." required>
                </div>
                <div class="form-group">
                    <h6>more images..</h6>
                    
                    <input class="form-control" type="text" name="sImage" id="image" 
                    
                    title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                    <input class="form-control" type="text" name="tImage" id="image" 
                    
                    title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
        </form>
            <button class="btn btn-large btn-warning btn-block" id="try">Try</button>
    
                <a href="/projects">go back</a>
        </div>
        <div class="col-md-8">
            <div class="thumbnail">
                <div>
                <iframe id="video" height="500px"></iframe>
                </div>
                <div class="caption-full">
                     <h3></h3>
                     <p><em></em></p>
                     <p id="description"> </p>
                    <span id="about-span"></span>
                    <div id="about">
                    </div>
                    <div>
                        <img class="img-inside-thumb-large">
                    </div>
                    <div>
                        <img class="img-inside-thumb-large">
                    </div>
                    <div>
                        <img class="img-inside-thumb-large">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    editProject();
</script>
<% include ../partials/footer %>


